{
  "$schema": "https://schema.management.azure.com/schemas/2019-04-01/deploymentTemplate.json#",
  "contentVersion": "1.0.0.0",
  "parameters": {
    "location": {
      "type": "string",
      "metadata": {
        "description": "Region in which NF VNF will be created"
      }
    },
    "nfName": {
      "type": "string",
      "metadata": {
        "description": "Name of NF VNF to be crated"
      }
    },
    "deviceId": {
      "type": "string",
      "metadata": {
        "description": "Azure Network Function Manager device instance"
      }
    },
    "edgeRouterKey": {
      "type": "string",
      "metadata": {
        "description": "Enter the edge router key"
      }
    },
    "endpointJWT": {
      "type": "string",
      "metadata": {
        "description": "Enter the endpoint jwt"
      }
    },
    "mecmgmtNic": {
      "type": "object"
    }
  },
  "variables": {
    "edgeRouterRegCmd": "#!/bin/sh\nsudo /opt/netfoundry/router-registration",
    "endpointRegCmd": "\nsudo /opt/netfoundry/gw-tunnel-setup",
    "runEdgeRouter": "[concat(variables('edgeRouterRegCmd'),' ',parameters('edgeRouterKey'))]",
    "runEndpoint": "[concat(variables('endpointRegCmd'),' ',parameters('endpointJWT'))]",
    "runCmd": "[concat(variables('runEdgeRouter'),' ',variables('runEndpoint'))]",
    "dnsServers": [
      "[parameters('mecmgmtNic').dnsServer1]",
      "[parameters('mecmgmtNic').dnsServer2]"
    ]
  },
  "resources": [
    {
      "apiVersion": "2018-02-01",
      "name": "pid-9b403a5d-5144-5486-a688-6d4384bbec6c",
      "type": "Microsoft.Resources/deployments",
      "properties": {
        "mode": "Incremental",
        "template": {
          "$schema": "https://schema.management.azure.com/schemas/2015-01-01/deploymentTemplate.json#",
          "contentVersion": "1.0.0.0",
          "resources": []
        }
      }
    },
    {
      "type": "Microsoft.HybridNetwork/networkFunctions",
      "apiVersion": "2020-01-01-preview",
      "location": "[parameters('location')]",
      "name": "[parameters('nfName')]",
      "properties": {
        "skuName": "ziti-7-3-0",
        "vendorName": "NetFoundryInc",
        "device": {
          "id": "[parameters('deviceId')]"
        },
        "networkFunctionUserConfigurations": [
          {
            "roleName": "ziti-edge-router",
            "networkInterfaces": [
              {
                "networkInterfaceName": "mecmgmtNic",
                "macAddress": null,
                "vmSwitchType": "Management",
                "ipConfigurations": [
                  {
                    "ipAllocationMethod": "Static",
                    "ipAddress": "[parameters('mecmgmtNic').ipAddress]",
                    "subnet": "[parameters('mecmgmtNic').subnet]",
                    "gateway": "[parameters('mecmgmtNic').gateway]",
                    "ipVersion": "IPv4",
                    "dnsServers": "[variables('dnsServers')]"
                  }
                ]
              }
            ],
            "osProfile": {
              "customData": "[base64(variables('runCmd'))]"
            }
          }
        ]
      }
    }
  ],
  "outputs": {}
}
