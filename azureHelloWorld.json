{
    "$schema": "http://schema.management.azure.com/schemas/2015-01-01/deploymentTemplate.json#",
    "contentVersion": "1.0.0.0",
    "parameters": {
        "location": {
            "type": "string",
            "defaultValue": "eastus"
        },
        "nfregKey": {
            "type": "secureString",
            "defaultValue": null,
            "metadata": {
                "description": "Enter the NetFoundry Gateway Registration Key"
            }
        }
    },
    "variables": {
        "scriptCmd": "#!/bin/sh\nsudo /opt/netfoundry/vtc/nfnreg",
        "vnetId": "[resourceId(resourceGroup().name,'Microsoft.Network/virtualNetworks', 'nfHelloDemoVnet')]",
        "subnetRef": "[concat(variables('vnetId'), '/subnets/nfHelloDemoSubnet')]",
        "runScript": "[concat(variables('scriptCmd'),' ',parameters('nfregKey'))]"
    },
    "resources": [
        {
            "apiVersion": "2020-04-01",
            "type": "Microsoft.Network/networkSecurityGroups",
            "name": "nfHelloDemoSg",
            "location": "[parameters('location')]",
            "tags": {},
            "properties": {
                "securityRules": [
                    {
                        "name": "SSH",
                        "properties": {
                            "priority": 1010,
                            "protocol": "TCP",
                            "access": "Allow",
                            "direction": "Inbound",
                            "sourceAddressPrefix": "*",
                            "sourcePortRange": "*",
                            "destinationAddressPrefix": "*",
                            "destinationPortRange": "22"
                        }
                    }
                ]
            }
        },
        {
            "name": "nfHelloDemoInt",
            "type": "Microsoft.Network/networkInterfaces",
            "apiVersion": "2020-04-01",
            "location": "[parameters('location')]",
            "tags": {},
            "properties": {
                "ipConfigurations": [
                    {
                        "name": "nfHelloDemoIpConfig01",
                        "properties": {
                            "subnet": {
                                "id": "[variables('subnetRef')]"
                            },
                            "privateIPAddress": "10.0.8.4",
                            "privateIPAllocationMethod": "Static",
                            "publicIpAddress": {
                                "id": "[resourceId(resourceGroup().name, 'Microsoft.Network/publicIpAddresses', 'nfHelloDemoIp')]"
                            }
                        }
                    }
                ],
                "networkSecurityGroup": {
                    "id": "[resourceId('Microsoft.Network/networkSecurityGroups', 'nfHelloDemoSg')]"
                }
            },
            "dependsOn": [
                "Microsoft.Network/networkSecurityGroups/nfHelloDemoSg",
                "Microsoft.Network/virtualNetworks/nfHelloDemoVnet",
                "Microsoft.Network/publicIpAddresses/nfHelloDemoIp"
            ]
        },
        {
            "name": "nfHelloDemoVnet",
            "type": "Microsoft.Network/virtualNetworks",
            "apiVersion": "2020-04-01",
            "location": "[parameters('location')]",
            "tags": {},
            "properties": {
                "addressSpace": {
                    "addressPrefixes": [
                        "10.0.8.0/24"
                    ]
                },
                "subnets": [
                    {
                        "name": "nfHelloDemoSubnet",
                        "properties": {
                            "addressPrefix": "10.0.8.0/24"
                        }
                    }
                ]
            }
        },
        {
            "name": "nfHelloDemoIp",
            "type": "Microsoft.Network/publicIpAddresses",
            "apiVersion": "2020-04-01",
            "location": "[parameters('location')]",
            "tags": {},
            "sku": {
                "name": "Basic"
            },
            "properties": {
                "publicIpAllocationMethod": "Dynamic"
            }
        },
        {
            "name": "nfHelloDemoGw",
            "type": "Microsoft.Compute/virtualMachines",
            "apiVersion": "2019-12-01",
            "location": "[parameters('location')]",
            "tags": {},
            "plan": {
                "name": "gateway",
                "publisher": "netfoundryinc",
                "product": "centos"
            },
            "properties": {
                "hardwareProfile": {
                    "vmSize": "Standard_B1ms"
                },
                "storageProfile": {
                    "osDisk": {
                        "createOption": "fromImage",
                        "managedDisk": {
                            "storageAccountType": "Premium_LRS"
                        }
                    },
                    "imageReference": {
                        "publisher": "netfoundryinc",
                        "offer": "centos",
                        "sku": "gateway",
                        "version": "latest"
                    }
                },
                "networkProfile": {
                    "networkInterfaces": [
                        {
                            "id": "[resourceId('Microsoft.Network/networkInterfaces', 'nfHelloDemoInt')]"
                        }
                    ]
                },
                "osProfile": {
                    "computerName": "nfHelloDemoGw",
                    "adminUsername": "nfadmin",
                    "adminPassword": "nfAzureDemoGW01$",
                    "customData": "[base64(variables('runScript'))]",
                    "linuxConfiguration": {
                        "disablePasswordAuthentication": false
                    }
                }
            },
            "dependsOn": [
                "Microsoft.Network/networkInterfaces/nfHelloDemoInt"
            ]
        }
    ],
    "outputs": {
        "adminUsername": {
            "type": "string",
            "value": "nfadmin"
        }
    }
}
